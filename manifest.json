{
    "manifest_version": 2,
    "name": "Border Patrol",
    "version": "1.0",
    "description": "Shows borders on all HTML elements for layout debugging.",
    "author": "Sourav Singh",
    "browser_action": {
        "browser_style": false,
        "default_area": "navbar",
        "default_icon": {
            "16": "img/logo.svg",
            "32": "img/logo.svg",
            "64": "img/logo.svg"
        },
        "default_title": "Show Outlines"
    },
    "icons": {
        "16": "img/logo.svg",
        "32": "img/logo.svg",
        "48": "img/logo.svg",
        "64": "img/logo.svg",
        "96": "img/logo.svg",
        "128": "img/logo.svg"
    },
    "permissions": ["activeTab", "tabs"],
    "background": {
        "scripts": ["background.js"]
    }
}
